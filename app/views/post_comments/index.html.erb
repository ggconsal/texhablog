<p id="notice"><%= notice %></p>

<h1>Listing Post Comments</h1>

<table>
  <thead>
    <tr>
      <th>Pco titulo</th>
      <th>Pco texto</th>
      <th>Post</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_comments.each do |post_comment| %>
      <tr>
        <td><%= post_comment.pco_titulo %></td>
        <td><%= post_comment.pco_texto %></td>
        <td><%= post_comment.post %></td>
        <td><%= post_comment.contact %></td>
        <td><%= link_to 'Show', post_comment %></td>
        <td><%= link_to 'Edit', edit_post_comment_path(post_comment) %></td>
        <td><%= link_to 'Destroy', post_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

